{
  "id": "delete-watched-episodes",
  "name": "Delete Watched Episodes",
  "version": "1.1.0",
  "language": "typescript",
  "type": "plugin",
  "description": "Delete local files for episodes you have already watched to free up disk space",
  "author": "Dadangdut33",
  "icon": "https://raw.githubusercontent.com/dadangdut33/seanime-extensions/refs/heads/master/plugins/delete-watched-episodes/icon.png",
  "website": "https://github.com/dadangdut33/seanime-extensions",
  "lang": "multi",
  "manifestURI": "https://raw.githubusercontent.com/dadangdut33/seanime-extensions/refs/heads/master/plugins/delete-watched-episodes/manifest.json",
  "payloadURI": "https://raw.githubusercontent.com/dadangdut33/seanime-extensions/refs/heads/master/plugins/delete-watched-episodes/code.ts",
  "plugin": {
    "version": "1",
    "permissions": {
      "scopes": ["anilist", "system", "storage"],
      "allow": {
        "readPaths": ["$DOWNLOAD/**/*", "$SEANIME_ANIME_LIBRARY/**/*"],
        "writePaths": ["$DOWNLOAD/**/*", "$SEANIME_ANIME_LIBRARY/**/*"]
      }
    }
  }
}
